<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content ">
            <div class="modal-header">
                <h5 class="modal-title" id="employeeModalTitle">Register</h5>
            </div>
            <div class="modal-body" id="employeeModalBody">
                <div class="container-fluid">
                    <form class="row needs-validation" novalidate>
                        <div class="container1">
                            <div class="title">Registration</div>
                            <div class="user__details">
                                <div class="input__row">
                                    <div class="input__box">
                                        <span class="details1">First Name</span>
                                        <input type="text" placeholder="E.g: John" required>
                                        <div class="invalid-feedback">
                                            Please input your FirstName
                                        </div>
                                    </div>
                                    <div class="input__box">
                                        <span class="details1">Last Name</span>
                                        <input type="text" placeholder="E.g: Smith" required>
                                        <div class="invalid-feedback">
                                            Please input your LastName
                                        </div>
                                    </div>
                                </div>
                                <div class="input__box">
                                    <span class="details1">Username</span>
                                    <input type="text" placeholder="johnWC98" required>
                                    <div class="invalid-feedback">
                                        Please input your UserName
                                    </div>
                                </div>
                                <div class="input__box">
                                    <span class="details1">Email</span>
                                    <input type="email" placeholder="johnsmith@hotmail.com" required>
                                    <div class="invalid-feedback">
                                        Please input your Email
                                    </div>
                                </div>
                                <div class="input__box">
                                    <span class="details1">Phone Number</span>
                                    <input type="tel" placeholder="012-345-6789" required>
                                    <div class="invalid-feedback">
                                        Please input your PhoneNumber
                                    </div>
                                </div>
                                <div class="input__box">
                                    <span class="details1">Address</span>
                                    <input type="text" placeholder="Enter your address" required>
                                    <div class="invalid-feedback">
                                        Please input your Address
                                    </div>
                                </div>
                                <div class="input__row">
                                    <div class="input__box">
                                        <span class="details1">Provinsi</span>
                                        <input type="text" placeholder="Provinsi " required>
                                        <div class="invalid-feedback">
                                            Please input your Provinsi
                                        </div>
                                    </div>
                                    <div class="input__box">
                                        <span class="details1">Kota</span>
                                        <input type="text" placeholder="Kota" required>
                                        <div class="invalid-feedback">
                                            Masukkan Kota
                                        </div>
                                    </div>
                                    <div class="input__box">
                                        <span class="details1">Kode Pos</span>
                                        <input type="tel" placeholder="Kode Pos" maxlength="5" required>
                                        <div class="invalid-feedback">
                                            Please input your Kode Pos
                                        </div>
                                    </div>

                                </div>
                                <div class="input__box">
                                    <span class="details1">Password</span>
                                    <input type="password" id="passwordInput" placeholder="********" required>
                                    <div class="invalid-feedback">
                                        Please input your Password
                                    </div>
                                </div>
                                <div class="input__box confirm-password">
                                    <span class="details1">Confirm Password</span>
                                    <input type="password" id="confirmPasswordInput" placeholder="********" required>
                                    <div class="invalid-feedback">
                                        Please input your Confirm Password
                                    </div>
                                </div>
                                <div id="passwordError" style="display: none; color: red;">Passwords do not match</div>
                            </div>
                            <div class="input__box">
                                <label class="details1" for="country">Degree</label>
                                <select class="form-select form-select-lg" id="country" name="country" aria-label=".form-select-lg example" required>
                                    <option selected disabled>Degree</option>
                                    <option value="1">D3</option>
                                    <option value="2">S1</option>
                                    <option value="3">S2</option>
                                </select><br><br>
                            </div>
                            <div class="gender__details1">
                                <span class="gender__title1">Gender</span>
                                <div class="category1">
                                    <label for="male">
                                        <input type="radio" name="gender" id="male">
                                        <span class="dot1 one"></span>
                                        <span>Male</span>
                                    </label>
                                    <label for="female">
                                        <input type="radio" name="gender" id="female" class="dot1 two">
                                        <span class="dot1 two"></span>
                                        <span>Female</span>
                                    </label>
                                    <div class="form-group">
                                        <label class="form-check-label"><input type="checkbox" required="required"> I accept the <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
                                    </div>
                                </div>
                                <div class="button1">
                                    <input type="submit" value="Register" onclick="validatePassword()">
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


